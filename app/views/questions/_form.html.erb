<% if @question.errors.any? %>
  <ul>
  <% @question.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </ul>
<% end %>

<%= form_for @question do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :question %>
  <%= f.text_area :question, class: 'text' %>
  <br>
  <%= f.submit %>

<% end %>
